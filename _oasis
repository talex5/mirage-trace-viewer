OASISFormat: 0.4
Name:        mirage-trace-viewer
Version:     0.1
Synopsis:    Graphical viewer of Lwt trace logs
Authors:     Thomas Leonard
License:     BSD-2-clause
Plugins:     META (0.4), DevFiles (0.4)

BuildTools: ocamlbuild

Flag xen
  Description:        true to build support for tracing Xen guests (requires xen-gnt-unix)
  Default:            false

Flag gtk
  Description:        true to build the GTK viewer
  Default:            true

Flag javascript
  Description:        true to build the JavaScript viewer
  Default:            true
 
Library "mirage-trace-viewer"
  Path:            lib
  FindlibName:     mirage-trace-viewer
  Modules:         Mtv_render, Mtv_event, Mtv_layout, Mtv_thread, Mtv_view
  InternalModules: Mtv_ITree, Mtv_counter, Mtv_sorted_array
  BuildDepends:    itv-tree,ocplib-endian.bigstring,cmdliner
  
Library "js"
  Path:           js
  Build$:         flag(javascript)
  Install$:       flag(javascript)
  FindlibParent:  mirage-trace-viewer
  FindlibName:    js
  Modules:        Html_viewer, Modal
  BuildDepends:   mirage-trace-viewer,js_of_ocaml,js_of_ocaml-ppx,js_of_ocaml-tyxml,js_of_ocaml-lwt
  
Library "main"
  Path:           main
  Install:        false
  BuildTools:     ocamlbuild
  BuildDepends:   mirage-trace-viewer,dynlink,xenstore.client,xenstore.unix,xenstore_transport.unix,threads,str,mirage-profile,io-page-unix,lwt.unix
  Modules:	  Plugin
  CompiledObject: best

Library "mtv-gtk-plugin"
  Path:           gtk
  FindlibParent:  mirage-trace-viewer
  FindlibName:    gtk
  Build$:         flag(gtk)
  Install$:       flag(gtk)
  BuildDepends:   lablgtk2,cairo2-gtk,cairo2,main
  Modules:	  Gtk_viewer
  CompiledObject: best

Executable "mirage-trace-viewer"
  Path:	          main
  BuildTools:     ocamlbuild
  MainIs:         main.ml
  BuildDepends:   main, io-page-unix
  CompiledObject: best
  
Library "mtv-xen-plugin"
  Path:           xen
  Build$:         flag(xen)
  Install$:       flag(xen)
  FindlibParent:  mirage-trace-viewer
  FindlibName:    xen
  Modules:        Xen_plugin
  BuildDepends:   xen-gnt,xen-gnt-unix, main, io-page-xen
  CompiledObject: best
